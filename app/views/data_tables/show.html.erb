<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l">Download Data Tables file</h1>
    <hr class="govuk-section-break govuk-section-break--xl  govuk-section-break--visible ">
  </div>

  <div class="govuk-grid-column-full">
    <h4 class="govuk-heading-s"><%= @data_table.file_name %> (latest)</h4>
    <p>Uploaded on <%= l(@data_table.created_at, format: :long) %></p>
    <%= link_to 'Download', url_for(@data_table.data_table), class: 'govuk-button' %>
  </div>
</div>
