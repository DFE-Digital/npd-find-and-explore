<div class="govuk-grid-row govuk-!-padding-top-2 govuk-!-padding-bottom-2" id="page-header">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-<%= size %> govuk-!-margin-bottom-0">
      <%= @title %>
    </h1>
  </div>
  <div class="govuk-grid-column-one-third">
    <a class="npd-saved-data show-modal" href="">
      <%= t('saved_data.panel') %>
      <span id="npd-counter" class="npd-counter">0</span>
    </a>
  </div>
</div>
<div class="govuk-grid-row govuk-!-margin-top-5">
  <div class="govuk-grid-column-two-thirds">
    <p class="description"><%= @description %></p>
  </div>
  <div class="govuk-grid-column-one-third">
  </div>
</div>
