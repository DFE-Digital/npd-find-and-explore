<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="pagination__item page">
  <% if page.current? -%>
    <%= tag.span page,
      class: %w[pagination__link govuk-body-s current],
      aria: { current: page.current? } %>
  <% else -%>
    <%= link_to page, url,
      rel: page.rel, remote: remote, aria: { current: page.current? },
      class: ['pagination__link', page.current? ? 'current' : nil].compact %>
  <% end %>
</span>
