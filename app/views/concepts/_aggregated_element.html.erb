<div class="govuk-grid-column-one-third">
  <h2 class="govuk-heading-s">
    <%= label %>
    <span class="tooltip">
      <a href="#<%= id %>" class="help" aria-describedby="<%= id %>" title="Help">
        i<span>nformation about <%= label.downcase %></span>
      </a>
      <span class="visuallyhidden tooltip-content tooltip-top-left" role="tooltip" id="<%= id %>">
        <%= tooltip %>
      </span>
    </span>
  </h2>
  <p>
    <%= value %>
  </p>
</div>
