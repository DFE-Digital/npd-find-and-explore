        <a href="#8" class="help" aria-describedby="data-tip" title="Help">?</a>
        <span class="visuallyhidden tooltip-content tooltip-top-left" role="tooltip" id="data-tip">
          <%= t('concepts.show.identifiability.tooltip') %>
        </span>
      </span>
    </h2>
    <p>
      <%= @concept.data_elements.map(&:identifiability).compact.min %>
    </p>
  </div>
</div>
