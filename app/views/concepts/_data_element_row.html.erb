<tr class="govuk-table__row">
  <th data-label="Name" class="govuk-table__header" scope="row">
    <%= data_element_row.title %>
  </th>
  <td data-label="Old name" class="govuk-table__cell govuk-table__cell--numeric">
    <%= [data_element_row.source_old_attribute_name].join(', ') %>
  </td>
  <td data-label="Date collected" class="govuk-table__cell govuk-table__cell--numeric">
    <%= academic_year(data_element_row.academic_year_collected_from) %>
    to
    <%= academic_year(data_element_row.academic_year_collected_to) %>
  </td>
  <td data-label="Sensitivity" class="govuk-table__cell govuk-table__cell--numeric">
    <%= data_element_row&.sensitivity %>
  </td>
  <td data-label="Identification risk" class="govuk-table__cell govuk-table__cell--numeric">
    <%= data_element_row&.identifiability %>
  </td>
  <td data-label="Value" class="govuk-table__cell govuk-table__cell--numeric">
    <%- if /\n/ =~ data_element_row.values %>
      <div class="overlay-parent">
        <a href="#" class="codeset" aria-describedby="codeset-<%= data_element_row.title.downcase %>" title="Codeset for <%= data_element_row.title %>">
          Codeset<span class="codeset-specification">for <%= data_element_row.title %></span>
        </a>
        <div class="overlay" role="overlay" id="codeset-<%= data_element_row.title.downcase %>">
          <div class="overlay-content">
            <span class="overlay-header">
              <span>Codeset values for <%= data_element_row.title %></span>
              <a href="#" class="overlay-close">X</a>
            </span>
            <%- data_element_row.values.split("\n") do |line| %>
              <span><%= line %></span><br />
            <%- end %>
          </div>
        </div>
      </div>
    <%- else %>
      <%= data_element_row.values %>
    <%- end %>
  </td>
</tr>
<tr class="govuk-table__row">
  <td class="govuk-table__cell" colspan="6">
    <p class="variable-description govuk-background__gray-4 govuk-!-font-size-16 govuk-!-margin-bottom-0">
      <%= data_element_row.description %>
    </p>
  </td>
</tr>
