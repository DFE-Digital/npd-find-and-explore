<div class="govuk-grid-row">
  <div class="govuk-grid-column-full govuk-filters">
    <div>
      <h3 class="govuk-heading-s">
        Categories
      </h3>
      <div class="govuk-checkboxes govuk-checkboxes-small collapsible">
        <% @categories.each do |category| %>
          <div class="govuk-checkboxes__item">
            <input class="govuk-checkboxes__input" id="categories-<%= category.id %>" name="categories" type="checkbox" value="<%= category.id %>">
            <label class="govuk-label govuk-checkboxes__label" for="categories-<%= category.id %>"><%= category.name %></label>
          </div>
        <% end %>
      </div>
    </div>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <div>
      <h3 class="govuk-heading-s">
        Years
      </h3>
      <div class="govuk-checkboxes govuk-checkboxes-small collapsible">
        <% @years.each do |year| %>
          <div class="govuk-checkboxes__item">
            <input class="govuk-checkboxes__input" id="years-<%= year %>" name="years" type="checkbox" value="<%= year %>">
            <label class="govuk-label govuk-checkboxes__label" for="years-<%= year %>"><%= year %></label>
          </div>
        <% end %>
      </div>
    </div>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <div>
      <h3 class="govuk-heading-s">
        Data Set
      </h3>
      <div class="govuk-checkboxes govuk-checkboxes-small collapsible">
        <% @tabs.each do |tab| %>
          <div class="govuk-checkboxes__item">
            <input class="govuk-checkboxes__input" id="tabs-<%= tab %>" name="tabs" type="checkbox" value="<%= tab %>">
            <label class="govuk-label govuk-checkboxes__label" for="tabs-<%= tab %>"><%= tab %></label>
          </div>
        <% end %>
      </div>
    </div>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <div>
      <h3 class="govuk-heading-s">
        CLA
      </h3>
      <div class="govuk-checkboxes govuk-checkboxes-small">
        <div class="govuk-checkboxes__item">
          <input class="govuk-checkboxes__input" id="cla-yes" name="cla" type="checkbox" value="true">
          <label class="govuk-label govuk-checkboxes__label" for="cla-yes">Yes</label>
        </div>
        <div class="govuk-checkboxes__item">
          <input class="govuk-checkboxes__input" id="cla-no" name="cla" type="checkbox" value="false">
          <label class="govuk-label govuk-checkboxes__label" for="cla-no">No</label>
        </div>
      </div>
    </div>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
  </div>
</div>
