<ul class="navbar-list govuk-body">
  <%- actions(:root).each do |action| %>
    <li class="<%= action.action_name %>_root_link govuk-!-font-size-24">
      <%= link_to wording_for(:menu, action), { action: action.action_name, controller: 'rails_admin/main' }, class: (action.pjax? ? 'pjax' : nil) %>
    </li>
  <%- end %>
  <%- if main_app_root_path = (main_app.root_path rescue false) %>
    <li class="govuk-!-font-size-24"><%= link_to t('admin.home.name'), main_app_root_path %></li>
  <%- end %>
  <%- if _current_user %>
    <%- if edit_link = edit_user_link %>
      <li class="edit_user_root_link govuk-!-font-size-24">
        <%= edit_link %>
      </li>
    <%- end %>
    <%- if logout_path.present? %>
      <li class="govuk-!-font-size-24">
        <%= link_to t('admin.misc.log_out'), logout_path, method: logout_method %>
      </li>
    <%- end %>
  <%- end %>
</ul>
