<tr class="govuk-table__row" role="link" data-url="/admin/data_elements/<%= data_element.id %>">
  <td class="govuk-table__header govuk-!-padding-left-0" scope="col">
    <div class="govuk-checkboxes govuk-checkboxes--small">
      <div class="govuk-checkboxes__item">
        <%= check_box_tag 'data_elements[]', data_element.id, false,
          id: "data-element-#{data_element.id}",
          class: %w[govuk-checkboxes__input basket-checkbox check-all-target] %>
        <%= label_tag "data-element-#{data_element.id}", class: %w[govuk-label govuk-checkboxes__label] do %>
          <%= tag.span data_element.title, class: %w[govuk-checkboxes__label-hidden] %>
        <% end %>
      </div>
    </div>
  </td>
  <td data-label="Dataset" class="govuk-table__cell">
    <%= link_to data_element.dataset,
                [:admin, data_element.datasets.first],
                { class: 'action-show' } %>
  </td>
  <td data-label="NPD Alias" class="govuk-table__cell">
    <%= link_to [data_element.npd_alias].join(', '),
                [:admin, data_element],
                { class: 'action-show' } %>
  </td>
  <td data-label="Datasets" class="govuk-table__cell govuk-!-padding-right-0 right">
    <%= link_to pluralize(data_element.datasets.count, 'dataset'),
                [:admin, data_element],
                { class: 'action-show' }  %>
  </td>
</tr>
