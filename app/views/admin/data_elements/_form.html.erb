<div id="form-group" class="govuk-form-group<%= success == false ? ' govuk-form-group--error' : '' %>">
  <%= form_with url: import_admin_data_elements_path, method: :post, remote: true,
                multipart: true, id: 'upload-form' do |f| %>
    <label class="govuk-label govuk-!-margin-bottom-3" for="file-upload">
      <span class="govuk-body-m">Data Table file in Excel format</span>
    </label>
    <input class="govuk-file-upload govuk-!-margin-bottom-3" id="file-upload" name="file-upload" type="file">
    <p id="upload-file-error" class="govuk-error-message govuk-!-margin-top-2">
      <span class="<%= success == false ? '' : ' govuk-visually-hidden'%>">Error:</span>
      <span class="message"><%= error %></span>
    </p>
    <p id="upload-file-success" class="govuk-inset-text<%= success ? '' : ' govuk-visually-hidden'%>">
      The file was processed and uploaded successfully
    </p>
    <div class="govuk-box govuk-!-margin-3" id="govuk-box-message" aria-busy="true"></div>
    <button type="submit" class="govuk-button">Upload</button>
  <%- end %>
</div>
