<% content_for(:title) do %>
  <%= t('admin.data_tables.import.unrecognised.title') %>
<% end %>

<% content_for(:additional_tags) do %>
  <%= stylesheet_pack_tag 'loader' %>
  <%= stylesheet_pack_tag 'suggest' %>
  <%= javascript_pack_tag 'loader' %>
  <%= javascript_pack_tag 'select-to-link' %>
  <%= javascript_pack_tag 'data_element_upload' %>
  <%= javascript_pack_tag 'suggest' %>
  <%= javascript_pack_tag 'radio-expand' %>
  <%= javascript_pack_tag 'unrecognised-datasets-list' %>
  <%= javascript_pack_tag 'soft-paginate' %>
  <%= javascript_pack_tag 'validate-forms' %>
<% end %>

<div class="govuk-grid-row govuk-!-margin-top-0 govuk-!-margin-bottom-5">
  <div class="govuk-grid-column-two-thirds govuk-!-margin-top-0">
    <header role="banner" class="govuk-!-margin-top-3">
      <p class="govuk-caption-xl">
        <%= t('admin.data_tables.import.title') %>
      </p>
      <h1 class="govuk-heading-xl main-content__page-title" id="page-title">
        <%= content_for(:title) %>
      </h1>
      <p class="govuk-!-font-size-19">
        <%= t('admin.data_tables.import.unrecognised.description') %>
      </p>

      <div class="govuk-error-summary hidden" aria-labelledby="error-summary-title"
        role="alert" tabindex="-1" data-module="govuk-error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
          There is a problem
        </h2>
        <div class="govuk-error-summary__body">
          <ul class="govuk-list govuk-error-summary__list">
          </ul>
        </div>
      </div>
    </header>

    <fieldset class="govuk-fieldset govuk-!-margin-0" role="group">
      <%= render partial: 'unrecognised', locals: { loader: loader, datasets: datasets, alias_fields: alias_fields } %>
    </fieldset>
  </div>

  <div class="govuk-grid-column-one-third govuk-!-padding-top-9">
    <div class="govuk-!-margin-top-9 govuk-!-padding-top-9">
      <p class="govuk-heading-s govuk-!-font-size-16 govuk-top-border govuk-!-padding-top-4">
        <%= t('admin.data_elements.orphaned.actions') %>
      </p>
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-1">
        <%= t('admin.data_tables.import.unrecognised.selected') %>
      </p>
      <ul class="govuk-list govuk-list--bullet unrecognised-datasets-list">
      </ul>
    </div>
  </div>
</div>
